<h1 class="my-3">All Available Flats (<%= @flats.size %>)</h1>

<div class="row justify-content-center">
  <% @flats.each do |flat| %>
    <div class="card col-12 col-lg-3 mx-4 my-3">
      <%# <img class="card-img-top" src="..." alt="Card image cap"> %>
      <div class="card-body">
        <h4 class="card-title"><%= flat.name %></h4>
        <p class="card-text"><%= flat.description %></p>
        <p> <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %> &nbsp <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
      <hr>
      <%= link_to "More Info", flat_path(flat) %>
      <%= link_to "Edit", edit_flat_path(flat), class: "text-warning" %>
      <%= link_to "Delete",
            flat_path(flat),
            class: "text-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </div>

    </div>
  <% end %>
</div>
